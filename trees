[ $# -eq 0 ] && { echo "Usage: trees <wildcard> (Estimates nucleotide trees for all *wildcard*.fasta files matching the wildcard)"; exit 1; }
for k in *$1*.fasta; do keeperCounter=$[$keeperCounter+1]; echo $k; echo "treeAndTouch `pwd`/$k `pwd`/$k.treeComplete" | qsub -l walltime=48:00:00; done

touch `pwd`/null.treeComplete

test=0
while [ $[$test - 1] -lt $keeperCounter ]
do
sleep 1;
test=`ls -1 *.treeComplete | wc -l`;
echo -ne "Trees estimated so far: $[$test - 1] of $keeperCounter \r"
done
echo "PHYLOGENY INFERENCE COMPLETE."
rm *.treeComplete